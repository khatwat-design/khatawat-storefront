generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  badge       String?
  category    String
  image       String
  isVisible   Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
}

model Order {
  id         String      @id
  createdAt  DateTime    @default(now())
  name       String
  phone      String
  city       String
  address    String
  notes      String?
  paymentMethod String?
  subtotal   Int
  deliveryFee Int
  total      Int
  totalItems Int
  channel    String?
  items      OrderItem[]
}

model OrderItem {
  id        String   @id @default(cuid())
  orderId   String
  productId String?
  name      String
  price     Int
  quantity  Int
  subtotal  Int
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  product   Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
}
